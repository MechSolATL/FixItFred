@page
@model Pages.Legal.PrivacyPolicyModel
<main role="main" tabindex="-1" aria-label="Privacy Policy Main Content">
@{
    ViewData["Title"] = "Privacy Policy";
    ViewData["MetaDescription"] = "Privacy Policy for Service Atlanta. Learn how we protect your data and comply with legal standards.";
    Layout = "/Pages/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");
    bool allowEdit = isAdmin && (ViewData["AllowLegalEdit"] as bool? ?? false);
}
<div class="content-wrapper" role="region" aria-label="Privacy Policy Content">
    <h1>Privacy Policy</h1>
    <p>Your privacy is important to us. This policy explains how Service Atlanta collects, uses, and protects your information.</p>
    <ul>
        <li>We do not sell or share your personal data except as required by law.</li>
        <li>All data is encrypted and stored securely.</li>
        <li>For legal requests, contact legal@service-atlanta.com.</li>
    </ul>
    @if (allowEdit)
    {
        <form method="post" role="form" aria-label="Edit Privacy Policy">
            <label for="PolicyText" class="form-label">Policy Text</label>
            <textarea name="PolicyText" id="PolicyText" rows="10" class="form-control" aria-label="Policy Text" style="min-height:44px;">@Model.PolicyText</textarea>
            <button type="submit" class="btn btn-primary mt-2" style="min-height:44px;" aria-label="Save Changes">Save Changes</button>
        </form>
    }
    <section aria-label="High Contrast Toggle" class="mt-3">
        <label for="contrastTogglePrivacy" class="form-label">High Contrast Mode</label>
        <input type="checkbox" id="contrastTogglePrivacy" aria-label="Toggle high contrast" tabindex="0" style="width:44px;height:44px;" onclick="document.body.classList.toggle('high-contrast')" />
    </section>
</div>
<style>
.high-contrast, .high-contrast * {
    background: #000 !important;
    color: #fff !important;
    border-color: #fff !important;
}
</style>
<script>
document.addEventListener('keydown', function(e) {
    if (e.key === 'Tab') {
        document.body.classList.add('user-is-tabbing');
    }
});
</script>
</main>
