@page
@model MVP_Core.Pages.Legal.TermsAndConditionsModel
<main role="main" tabindex="-1" aria-label="Terms and Conditions Main Content">
@{
    ViewData["Title"] = "Terms and Conditions";
    ViewData["MetaDescription"] = "Terms and Conditions for Service Atlanta. Review our legal terms for service and compliance.";
    Layout = "/Pages/Shared/_Layout.cshtml";
    bool isAdmin = User.IsInRole("Admin");
    bool allowEdit = isAdmin && (ViewData["AllowLegalEdit"] as bool? ?? false);
}
<div class="content-wrapper" role="region" aria-label="Terms and Conditions Content">
    <h1>Terms and Conditions</h1>
    <p>By using Service Atlanta, you agree to the following terms and conditions:</p>
    <ul>
        <li>All services are subject to local, state, and federal regulations.</li>
        <li>Invoices and estimates are final upon signature and payment.</li>
        <li>Disputes must be submitted in writing within 30 days.</li>
    </ul>
    @if (allowEdit)
    {
        <form method="post" role="form" aria-label="Edit Terms and Conditions">
            <label for="TermsText" class="form-label">Terms Text</label>
            <textarea name="TermsText" id="TermsText" rows="10" class="form-control" aria-label="Terms Text" style="min-height:44px;">@Model.TermsText</textarea>
            <button type="submit" class="btn btn-primary mt-2" style="min-height:44px;" aria-label="Save Changes">Save Changes</button>
        </form>
    }
    <section aria-label="High Contrast Toggle" class="mt-3">
        <label for="contrastToggleTerms" class="form-label">High Contrast Mode</label>
        <input type="checkbox" id="contrastToggleTerms" aria-label="Toggle high contrast" tabindex="0" style="width:44px;height:44px;" onclick="document.body.classList.toggle('high-contrast')" />
    </section>
</div>
<style>
.high-contrast, .high-contrast * {
    background: #000 !important;
    color: #fff !important;
    border-color: #fff !important;
}
</style>
<script>
document.addEventListener('keydown', function(e) {
    if (e.key === 'Tab') {
        document.body.classList.add('user-is-tabbing');
    }
});
</script>
</main>
