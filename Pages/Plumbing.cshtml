@page
@model MVP_Core.Pages.PlumbingModel
@{
    ViewData["Title"] = "Plumbing Services - Verify Your Email";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="service-container">
    <h1>Plumbing Services</h1>

    <div class="step-container mt-4">
        <h3 class="text-primary">Step 1: Verify Your Email</h3>
        <p>
            To ensure smooth communication, we need to verify your email address. This verified email will be used for:
        </p>
        <ul class="list-unstyled">
            <li>✅ Receiving service updates and confirmations</li>
            <li>✅ Tracking all current and future service requests</li>
            <li>✅ Ensuring reliable communication for reminders and support</li>
        </ul>
        <p>
            Please enter your email address below. A verification link will be sent to your inbox. Once verified, you can proceed to request Plumbing services.
        </p>

        <!-- Email Input Form -->
        <form method="post" class="mt-3">
            <div class="form-group">
                <label for="emailInput" class="font-weight-bold">Enter Your Email Address:</label>
                <input type="email" asp-for="Form.Email" id="emailInput" class="form-control" placeholder="example@domain.com" required />
            </div>
            <button type="submit" class="btn btn-primary">Send Verification Link</button>
        </form>

        <!-- User Feedback Section -->
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info mt-3">
                @Model.Message
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            console.log("Step 1: Email verification page loaded for Plumbing Services.");
        });
    </script>
}
