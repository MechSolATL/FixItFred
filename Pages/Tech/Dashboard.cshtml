@* Sprint 91.8 - RazorFix: Remove any stray @media or @keyframes Razor lines left from previous inline CSS removal. *@
@page
@model MVP_Core.Pages.Tech.DashboardModel
@using Data.Models
@{
    ViewData["Title"] = "Technician Dashboard";
    Layout = "_LayoutTechnician.cshtml";
}
<div class="dashboard-root mobile-fullheight">
    <!-- Sprint 91.7 Part 7: Embedded Route Guidance -->
    <section class="dashboard-map-section">
        <h3 class="mb-2">Route Guidance</h3>
        <div id="dashboard-map" style="height:260px;width:100%;background:#e9ecef;border-radius:12px;"></div>
        <div class="route-summary mt-2">
            <span><strong>Next Stop:</strong> @Model.NextJob?.Zone ?? "N/A"</span> |
            <span><strong>ETA:</strong> @Model.NextJob?.EstimatedArrival?.ToLocalTime().ToShortTimeString() ?? "--"</span> |
            <span><strong>Distance:</strong> @Model.MockDistanceKm km</span>
        </div>
    </section>
    <!-- Sprint 91.7 Part 7: Action Card Stack -->
    <section class="dashboard-action-cards mt-3">
        <div class="action-card current-job-card @Model.GetUrgencyClass(Model.CurrentJob)">
            <div class="card-header d-flex align-items-center">
                <span class="badge bg-primary me-2">?? Current Job</span>
                <span class="status-badge ms-auto">@Model.CurrentJobStatus</span>
            </div>
            <div class="card-body">
                <div><strong>Address:</strong> @Model.CurrentJob?.Zone</div>
                <div><strong>Client:</strong> @Model.CurrentJobClientName</div>
                <div><strong>ETA:</strong> @Model.CurrentJob?.EstimatedArrival?.ToLocalTime().ToShortTimeString()</div>
                <div><strong>Type:</strong> @Model.CurrentJob?.ServiceTypePriority</div>
                <div><strong>Value:</strong> $@Model.CurrentJob?.CommissionAmount?.ToString("F2")</div>
                <div class="mt-2">
                    <button class="btn btn-success btn-sm">Navigate</button>
                    <button class="btn btn-primary btn-sm">Start Job</button>
                    <button class="btn btn-outline-secondary btn-sm">Contact Client</button>
                </div>
            </div>
        </div>
        <div class="action-card next-job-card @Model.GetUrgencyClass(Model.NextJob)">
            <div class="card-header d-flex align-items-center">
                <span class="badge bg-info me-2">?? Next Job</span>
                @if (Model.NextJobOverlapWarning)
                {
                    <span class="badge bg-warning text-dark ms-auto">Overlap Warning</span>
                }
            </div>
            <div class="card-body">
                <div><strong>Preview:</strong> @Model.NextJob?.Zone</div>
                <div><strong>Start:</strong> @Model.NextJob?.ScheduledFor?.ToLocalTime().ToShortTimeString()</div>
            </div>
        </div>
        <div class="action-card tools-required-card">
            <div class="card-header"><span class="badge bg-secondary">?? Tools Required</span></div>
            <div class="card-body">
                @if (Model.ToolsRequired?.Count > 0)
                {
                    <ul>
                        @foreach (var tool in Model.ToolsRequired)
                        {
                            <li>@tool.Name (@tool.ToolType)</li>
                        }
                    </ul>
                }
                else
                {
                    <span>No tools required for this job.</span>
                }
            </div>
        </div>
        <div class="action-card alerts-card">
            <div class="card-header"><span class="badge bg-danger">?? Alerts</span></div>
            <div class="card-body">
                @if (Model.Alerts?.Count > 0)
                {
                    <ul>
                        @foreach (var alert in Model.Alerts)
                        {
                            <li>@alert</li>
                        }
                    </ul>
                }
                else
                {
                    <span>No alerts.</span>
                }
            </div>
        </div>
    </section>
</div>
@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        // Sprint 91.7 Part 7: Mock map with current location and next destination
        document.addEventListener('DOMContentLoaded', function() {
            var map = L.map('dashboard-map').setView([@Model.CurrentLat, @Model.CurrentLng], 13);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '© OpenStreetMap'
            }).addTo(map);
            L.marker([@Model.CurrentLat, @Model.CurrentLng]).addTo(map).bindPopup('You are here').openPopup();
            @if (Model.NextJobLat != null && Model.NextJobLng != null)
            {
            <text>
            L.marker([@Model.NextJobLat, @Model.NextJobLng], {icon: L.icon({iconUrl:'/img/pin-next.png',iconSize:[32,32]})}).addTo(map).bindPopup('Next Job');
            </text>
            }
        });
    </script>
}
