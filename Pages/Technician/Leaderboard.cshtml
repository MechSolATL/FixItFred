@page
@model MVP_Core.Pages.Technician.LeaderboardModel
@inject MVP_Core.Services.TechnicianLeaderboardService LeaderboardService
@{
    ViewData["Title"] = "Technician Leaderboard";
    Layout = "/Pages/Shared/_Layout.cshtml";
    var leaderboard = LeaderboardService.GetLeaderboard();
}
<!-- Sprint 84.5 — Technician Leaderboard + Rivalry Engine -->
<div class="container mx-auto px-2 py-4">
    <h2 class="mb-4">Technician Leaderboard</h2>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Rank</th>
                <th>Name</th>
                <th>Tier</th>
                <th>Points</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < leaderboard.Count; i++)
            {
                var entry = leaderboard[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@entry.Name</td>
                    <td>@entry.TierLevel</td>
                    <td>@entry.TotalPoints</td>
                    <td>@entry.City</td>
                </tr>
            }
        </tbody>
    </table>
</div>
