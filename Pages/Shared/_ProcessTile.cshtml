@model ViewModels.ProcessStatusViewModel
@{
    string statusClass = Model.Status switch
    {
        ViewModels.ProcessHealthStatus.Healthy => "process-tile-healthy",
        ViewModels.ProcessHealthStatus.Warning => "process-tile-warning",
        ViewModels.ProcessHealthStatus.Critical => "process-tile-critical",
        _ => "process-tile-unknown"
    };
    string badgeIcon = Model.Status switch
    {
        ViewModels.ProcessHealthStatus.Healthy => "??",
        ViewModels.ProcessHealthStatus.Warning => "??",
        ViewModels.ProcessHealthStatus.Critical => "??",
        _ => "?"
    };
}
<div class="process-tile @statusClass mb-3 animate__animated animate__fadeInUp">
    <div class="d-flex align-items-center mb-2">
        <span class="process-badge me-2 pulse-status">@badgeIcon</span>
        <span class="fw-bold">@Model.Name</span>
        <span class="latency-dot ms-2" title="Ping Latency">
            <span class="live-flash"></span>
            @Model.PingLatencyMs ms
        </span>
    </div>
    <div class="small text-muted mb-1">Last checked: @Model.LastChecked.ToLocalTime().ToString("g")</div>
    <div class="suggested-action small">@Model.SuggestedAction</div>
</div>
