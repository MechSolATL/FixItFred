@model MVP_Core.ViewModels.MetricsCardViewModel
<div class="col mb-4">
    <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <div class="mb-2">
                <i class="fas @Model.Icon fa-2x"></i>
            </div>
            <h5 class="card-title mb-1">@Model.Title</h5>
            <div class="display-6 fw-bold mb-1">@Model.Value</div>
            @if (!string.IsNullOrEmpty(Model.Delta))
            {
                <span class="badge bg-info">@Model.Delta</span>
            }
            @if (!string.IsNullOrEmpty(Model.RiskLevel))
            {
                <span class="badge bg-@((Model.RiskLevel == "High") ? "danger" : (Model.RiskLevel == "Medium" ? "warning text-dark" : "success"))">@Model.RiskLevel Risk</span>
            }
            @if (!string.IsNullOrEmpty(Model.LinkTo))
            {
                <a href="@Model.LinkTo" class="stretched-link"></a>
            }
        </div>
    </div>
</div>
