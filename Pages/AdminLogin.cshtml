@model Pages.AdminLoginModel
@{
    ViewData["Title"] = "Admin Login";
    ViewData["MetaDescription"] = "Secure admin login portal for Service Atlanta management system";
    ViewData["Keywords"] = "admin login, service atlanta, management portal, secure access";
    ViewData["Robots"] = "noindex, nofollow"; // Admin pages should not be indexed
    Layout = "/Pages/Shared/_Layout.cshtml";
    
    // [FixItFredComment:Sprint1003 - SEO Meta Injection] Include SEO head partial
    await Html.PartialAsync("/Pages/Shared/_SEOHead.cshtml");
}

<h2>Admin Login</h2>

<form method="post">
    <div>
        <label>Username:</label>
        <input type="text" asp-for="Username" required />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" asp-for="Password" required />
    </div>
    <button type="submit">Login</button>
</form>

@if (Model.ErrorMessage != null)
{
    <p style="color:red;">@Model.ErrorMessage</p>
}
