@page
@model MVP_Core.Pages.Tools.HashPasswordModel
@{
    ViewData["Title"] = "Password Hasher Tool";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🔐 Password Hasher Tool</h2>

    <form method="post" class="mb-4">
        <div class="mb-3">
            <label asp-for="InputPassword" class="form-label">Enter Password</label>
            <input asp-for="InputPassword" class="form-control" placeholder="Type a password to hash..." required />
            <span asp-validation-for="InputPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Generate Hash</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.GeneratedHash))
    {
        <div class="alert alert-success" role="alert">
            <strong>Hashed Password:</strong>
            <textarea class="form-control mt-2" rows="3" readonly>@Model.GeneratedHash</textarea>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
