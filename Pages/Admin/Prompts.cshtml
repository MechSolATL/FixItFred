@page
@model MVP_Core.Pages.Admin.PromptsModel
@{
    ViewData["Title"] = "Prompt Debugger & Runner";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}
<!-- Sprint 90.1: Prompt Debugger UI -->
<h2>Prompt Debugger & Runner</h2>
<form method="post">
    <div class="mb-3">
        <label>Prompt Version</label>
        <select asp-for="SelectedPromptVersionId" asp-items="@(new SelectList(Model.PromptVersions, "Id", "Name"))" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label>Provider</label>
        <select asp-for="SelectedProviderId" asp-items="@(new SelectList(Model.Providers, "Id", "ProviderName"))" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label>API Key</label>
        <input asp-for="ApiKey" class="form-control" />
    </div>
    <button type="submit" asp-page-handler="RunPrompt" class="btn btn-primary">Run Prompt</button>
</form>
@if (Model.Output != null)
{
    <div class="alert alert-success mt-3">
        <strong>Output:</strong>
        <pre>@Model.Output</pre>
    </div>
}
