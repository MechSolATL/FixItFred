@page
@model MVP_Core.Pages.Admin.PromptsModel
@{
    ViewData["Title"] = Model.Seo?.Title ?? "Prompt Debugger & Runner";
    ViewData["MetaDescription"] = Model.Seo?.MetaDescription ?? "Run and test OpenAI prompts with live output.";
    ViewData["Keywords"] = Model.Seo?.Keywords ?? "Prompt, Debugger, AI, OpenAI, MVP-Core";
    ViewData["Robots"] = Model.Seo?.Robots ?? "noindex,nofollow";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}

<h2>Prompt Debugger & Runner</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="PromptInput" class="form-label">Prompt</label>
        <textarea asp-for="PromptInput" class="form-control" rows="5" id="PromptInput"></textarea>
    </div>

    <button type="submit" asp-page-handler="RunPrompt" class="btn btn-primary">Run Prompt</button>
</form>

@if (Model.Output != null)
{
    <div class="alert alert-success mt-3">
        <strong>Output:</strong>
        <pre>@Model.Output</pre>
    </div>
}
