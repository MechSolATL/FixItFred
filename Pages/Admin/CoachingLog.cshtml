@page
@model Pages.Admin.CoachingLogModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    // Sprint 85.7 — Admin Log Hardening & Encryption
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Supervisor Coaching Logbook";
}
<div class="container-fluid px-2 px-md-4 mt-4">
    <h2 class="mb-4 text-primary">Supervisor Coaching Logbook</h2>
    <!-- Sprint 85.4 — Coaching UI Enhancements + Export -->
    <form method="get" class="row g-2 mb-3 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Date Range</label>
            <input type="date" name="startDate" class="form-control" value="@Model.StartDateString" />
        </div>
        <div class="col-md-3">
            <label class="form-label">To</label>
            <input type="date" name="endDate" class="form-control" value="@Model.EndDateString" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Technician Tier</label>
            <select name="tier" class="form-select">
                <option value="">All</option>
                @foreach (var tier in Model.Tiers)
                {
                    if (Model.SelectedTier == tier)
                    {
                        <option value="@tier" selected>@tier</option>
                    }
                    else
                    {
                        <option value="@tier">@tier</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Supervisor</label>
            <select name="supervisor" class="form-select">
                <option value="">All</option>
                @foreach (var sup in Model.Supervisors)
                {
                    if (Model.SelectedSupervisor == sup)
                    {
                        <option value="@sup" selected>@sup</option>
                    }
                    else
                    {
                        <option value="@sup">@sup</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2 mt-2">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
        <div class="col-md-2 mt-2">
            <button type="submit" name="export" value="1" class="btn btn-success w-100">Export to CSV</button>
        </div>
        <div class="col-md-2 mt-2">
            <button type="button" class="btn btn-outline-secondary w-100" data-bs-toggle="modal" data-bs-target="#addCoachingModal">Add Entry</button>
        </div>
    </form>
    <!-- Sprint 85.6 — Coaching Impact Insights Phase 2: Chart -->
    @{
        ViewData["Technicians"] = Model.Technicians;
    }
    @await Html.PartialAsync("_CoachingImpactGraph", Model.TechnicianTrustImprovements)
    <div class="mb-2">
        <strong>Average Trust Improvement per Technician:</strong> @Model.AvgTrustImprovement.ToString("F2")
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Technician</th>
                    <th>Tier</th>
                    <th>Supervisor</th>
                    <th>Category</th>
                    <th>Note</th>
                    <th>Sensitive</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var entry in Model.Entries)
            {
                var tech = Model.Technicians.FirstOrDefault(t => t.Id == entry.TechnicianId);
                <tr>
                    <td>@entry.Timestamp.ToLocalTime().ToString("yyyy-MM-dd")</td>
                    <td>@(tech?.FullName ?? $"Tech #{entry.TechnicianId}")</td>
                    <td>@(tech?.TierLevel.ToString() ?? "-")</td>
                    <td>@entry.SupervisorName</td>
                    <td>
                        <span class="badge bg-info text-dark">@entry.Category</span>
                    </td>
                    <td>
                        @if (entry.IsSensitive)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <span class="text-danger">@Model.GetDecryptedNote(entry)</span>
                            }
                            else
                            {
                                <span class="text-muted">[Sensitive - Admin Only]</span>
                            }
                        }
                        else
                        {
                            @entry.CoachingNote
                        }
                    </td>
                    <td>
                        @if (entry.IsSensitive)
                        {
                            <span class="badge bg-warning text-dark">Sensitive</span>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <!-- Modal for new coaching entry -->
    <div class="modal fade" id="addCoachingModal" tabindex="-1" aria-labelledby="addCoachingModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addCoachingModalLabel">Add Coaching Entry</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-2">
                            <label class="form-label">Technician</label>
                            <select name="TechnicianId" class="form-select" required>
                                <option value="">Select...</option>
                                @foreach (var tech in Model.Technicians)
                                {
                                    <option value="@tech.Id">@tech.FullName</option>
                                }
                            </select>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Supervisor</label>
                            <input name="SupervisorName" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Category</label>
                            <select name="Category" class="form-select" required>
                                <option value="Performance">Performance</option>
                                <option value="Attitude">Attitude</option>
                                <option value="Skill">Skill</option>
                            </select>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Note</label>
                            <textarea name="CoachingNote" class="form-control" required></textarea>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="IsSensitive" id="IsSensitiveCheckbox">
                            <label class="form-check-label" for="IsSensitiveCheckbox">Sensitive (Admin Only)</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Entry</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
