@page
@model Pages.Admin.GeoBreakAuditModel
@{
    ViewData["Title"] = "Geo Break Audit";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<h2>Geo Break Audit</h2>
<form method="get">
    <label>Technician ID:</label>
    <input type="number" name="TechnicianId" value="@Model.TechnicianId" />
    <button type="submit">Filter</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Time</th><th>Tech ID</th><th>Lat</th><th>Lng</th><th>Status</th><th>Decision</th><th>Override</th><th>Approver</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var log in Model.Logs)
    {
        <tr>
            <td>@log.ValidationTime</td><td>@log.TechnicianId</td><td>@log.Latitude</td><td>@log.Longitude</td><td>@log.LocationStatus</td><td>@log.SystemDecision</td><td>@log.IsOverride</td><td>@log.Approver</td>
        </tr>
    }
    </tbody>
</table>
