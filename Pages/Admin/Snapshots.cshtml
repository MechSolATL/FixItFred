@page
@model Pages.Admin.SnapshotsModel

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Seo.Title;
    ViewData["Description"] = Model.Seo.MetaDescription;
}

<h1>@Model.Seo.Title</h1>
<p>@Model.Seo.MetaDescription</p>

<form method="get" class="mb-3">
    <input type="text" name="search" value="@Model.SearchTerm" placeholder="Search summary or type..." class="form-control w-25 d-inline-block" />
    <button type="submit" class="btn btn-primary ms-2">Search</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Type</th>
            <th>Summary</th>
            <th>Created By</th>
            <th>Created At</th>
            <th>Hash</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var snap in Model.Snapshots)
        {
            <tr>
                <td>@snap.SnapshotType</td>
                <td>@snap.Summary</td>
                <td>@snap.CreatedBy</td>
                <td>@snap.CreatedAt.ToString("g")</td>
                <td><code>@snap.SnapshotHash</code></td>
                <td>
                    <form method="post" asp-page-handler="Replay" class="d-inline">
                        <input type="hidden" name="snapshotHash" value="@snap.SnapshotHash" />
                        <button type="submit" class="btn btn-sm btn-warning">Replay</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-info mt-3">@Model.StatusMessage</div>
}