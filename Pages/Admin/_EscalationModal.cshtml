@* Sprint 34.2 - Escalation Override Modal *@
@model (int ScheduleId, string AdminUser)
<div class="modal fade" id="escalationOverrideModal" tabindex="-1" aria-labelledby="escalationOverrideModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="post" asp-page-handler="EscalateJob">
        <div class="modal-header">
          <h5 class="modal-title" id="escalationOverrideModalLabel">Escalation Override</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="scheduleId" value="@Model.ScheduleId" />
          <div class="mb-3">
            <label for="newETA" class="form-label">New ETA (optional)</label>
            <input type="datetime-local" class="form-control" id="newETA" name="newETA" />
          </div>
          <div class="mb-3">
            <label for="reason" class="form-label">Escalation Reason</label>
            <textarea class="form-control" id="reason" name="reason" required></textarea>
          </div>
          <div class="mb-3">
            <label for="actionTaken" class="form-label">Action Taken</label>
            <textarea class="form-control" id="actionTaken" name="actionTaken" required></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Admin</label>
            <input type="text" class="form-control" value="@Model.AdminUser" readonly />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Submit Escalation</button>
        </div>
      </form>
    </div>
  </div>
</div>
