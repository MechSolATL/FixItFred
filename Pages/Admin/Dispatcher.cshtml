    document.querySelectorAll('.draggable-job').forEach(el => {
        el.addEventListener('dragstart', e => {
            e.dataTransfer.setData('job-id', el.dataset.jobId);
        });
    });
    document.querySelectorAll('.dropzone').forEach(el => {
        el.addEventListener('dragover', e => e.preventDefault());
        el.addEventListener('drop', async e => {
            e.preventDefault();
            const jobId = e.dataTransfer.getData('job-id');
            const techId = el.dataset.techId;
            const res = await fetch('/api/dispatch/assign-job', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ jobId, techId })
            });
            if (res.ok) {
                alert("Job reassigned!");
                location.reload(); // Optional: auto-refresh UI or requery SignalR data
            } else {
                alert("Assignment failed.");
            }
        });
    });
