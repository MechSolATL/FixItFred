@model List<Data.Models.Technician>
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><strong>Technician Load Status</strong></span>
        <form method="post" asp-page-handler="RecalculateLoad" class="mb-0">
            <button type="submit" class="btn btn-sm btn-outline-primary">Recalculate Load</button>
        </form>
    </div>
    <div class="card-body p-2">
        <table class="table table-sm table-bordered mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Current Jobs</th>
                    <th>Max Capacity</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @* Sprint 33.2 - Drag-and-Drop Dispatcher UI [DropZone Setup] *@
                @foreach (var tech in Model)
                {
                    var percent = tech.MaxJobCapacity > 0 ? (double)tech.CurrentJobCount / tech.MaxJobCapacity : 0;
                    string statusClass = percent < 0.5 ? "table-success" : percent < 1.0 ? "table-warning" : "table-danger";
                    <tr class="@statusClass">
                        <td>
                            <div class="dropzone" data-tech-id="@tech.Id">
                                @tech.FullName
                            </div>
                        </td>
                        <td>@tech.CurrentJobCount</td>
                        <td>@tech.MaxJobCapacity</td>
                        <td>
                            @if (percent < 0.5) { <span class="badge bg-success">Low</span> }
                            else if (percent < 1.0) { <span class="badge bg-warning text-dark">Medium</span> }
                            else { <span class="badge bg-danger">Full</span> }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
