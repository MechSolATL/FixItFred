@page
@model MVP_Core.Pages.Admin.GhostAuditLogModel
@{
    ViewData["Title"] = "Ghost Delay Audit Log";
}
<h2>Ghost Delay Audit Log</h2>
<table class="table">
    <thead>
        <tr>
            <th>Department</th>
            <th>DelayStart</th>
            <th>DelayEnd</th>
            <th>EscalationLevel</th>
            <th>ResolutionNotes</th>
            <th>Shadow Delay?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.SampledDelays)
        {
            <tr>
                <td>@d.Department</td>
                <td>@d.DelayStart</td>
                <td>@d.DelayEnd</td>
                <td>@d.EscalationLevel</td>
                <td>@d.ResolutionNotes</td>
                <td>@(Model.IsShadowDelay(d) ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
