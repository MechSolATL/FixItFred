@page
@model Pages.Admin.AuditLogsModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Audit Logs – Service Atlanta";
}

<h1 class="text-2xl font-bold mb-4">Audit Logs</h1>

@if (Model.Logs == null || !Model.Logs.Any())
{
    <div class="alert alert-warning">No audit log entries found.</div>
}
else
{
    <table class="table table-striped table-bordered w-100 mt-4">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>User ID</th>
                <th>Change Type</th>
                <th>Old Value</th>
                <th>New Value</th>
                <th>IP Address</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.Logs)
            {
                <tr>
                    <td>@log.Id</td>
                    <td>@log.UserId</td>
                    <td>@log.ChangeType</td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>@log.OldValue</td>
                        <td>@log.NewValue</td>
                        <td>@log.IPAddress</td>
                    }
                    else
                    {
                        <td>??</td>
                        <td>??</td>
                        <td>??</td>
                    }
                    <td>@log.Timestamp.ToLocalTime().ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
