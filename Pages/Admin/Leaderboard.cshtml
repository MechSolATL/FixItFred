@page
@model MVP_Core.Pages.Admin.LeaderboardModel
@using Data.Models.UI
@using Services.Stats
@using Data.Models
@inject ILeaderboardService LeaderboardService
@inject ContentService ContentService
@inject ISeoService SeoService
@{ 
    var seo = await SeoService.GetSeoForPageAsync("Leaderboard");
    ViewData["Title"] = seo.Title;
    ViewData["Description"] = seo.Description;
}

<div class="leaderboard">
    <h1>@Model.Title</h1>
    <div class="technicians">
        @foreach (var tech in Model.TopTechnicians)
        {
            <div class="technician">
                <img src="@tech.Avatar" alt="@tech.Name" />
                <h2>@tech.Name</h2>
                <p>Rank: @tech.Rank</p>
                <p>Jobs Completed: @tech.JobsCompleted</p>
                <p>Sales Total: @tech.SalesTotal</p>
                <p>Customer Rating: @tech.CustomerRating</p>
            </div>
        }
    </div>
    <div class="monthly-challenge">
        <h2>Monthly Challenge</h2>
        <p>@Model.MonthlyChallengeSummary</p>
    </div>
    <div class="efficiency-meter">
        <h2>Team Efficiency</h2>
        <progress value="@Model.TeamEfficiency" max="100"></progress>
    </div>
    <div class="quote-panel">
        <h2>Quote of the Moment</h2>
        <p>@Model.RotatingQuote</p>
    </div>
</div>
