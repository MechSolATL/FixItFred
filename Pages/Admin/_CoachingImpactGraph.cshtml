@* Sprint 85.6 — Coaching Impact Insights Phase 2 *@
@model Dictionary<int, int>
@{
    var techs = ViewData["Technicians"] as List<Data.Models.Technician>;
}
<div class="card mb-4">
    <div class="card-header bg-success text-white">
        Coaching Impact by Technician
    </div>
    <div class="card-body">
        <canvas id="coachingImpactChart" height="120"></canvas>
    </div>
</div>
@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Sprint 85.6 — Coaching Impact Insights Phase 2
    const ctx = document.getElementById('coachingImpactChart').getContext('2d');
    const data = {
        labels: [@string.Join(",", Model.Keys.Select(id => $"'" + (techs?.FirstOrDefault(t => t.Id == id)?.FullName ?? ("Tech #" + id)) + "'"))],
        datasets: [{
            label: 'Trust Improvement',
            data: [@string.Join(",", Model.Values)],
            backgroundColor: 'rgba(40,167,69,0.5)',
            borderColor: 'rgba(40,167,69,1)',
            borderWidth: 1
        }]
    };
    new Chart(ctx, {
        type: 'bar',
        data: data,
        options: {
            responsive: true,
            plugins: {
                legend: { display: false },
                title: { display: true, text: 'Coaching Impact by Technician' }
            },
            scales: {
                y: { beginAtZero: true }
            }
        }
    });
</script>
}
