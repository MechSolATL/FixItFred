@page
@model MVP_Core.Pages.Admin.ManageSEOModel
@{
    ViewData["Title"] = "Manage SEO Metadata";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">🔍 Manage SEO Settings</h2>

    @if (Model.SEOs != null && Model.SEOs.Any())
    {
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Page Name</th>
                    <th>Title</th>
                    <th>Meta Description</th>
                    <th>Keywords</th>
                    <th>Robots</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var seo in Model.SEOs)
                {
                    <tr>
                        <td>@seo.PageName</td>
                        <td>@seo.Title</td>
                        <td>@seo.MetaDescription</td>
                        <td>@seo.Keywords</td>
                        <td>@seo.RobotsMeta</td>
                        <td>
                            <a href="/Admin/EditSEO?id=@seo.Id" class="btn btn-sm btn-primary">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            ⚠️ No SEO records found.
        </div>
    }
</div>

@section Scripts {
    <script>
        console.log("✅ Manage SEO Page Loaded.");
    </script>
}
