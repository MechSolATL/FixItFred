@model MVP_Core.Pages.Admin.ManageSEOModel
@inject Services.ISeoService SeoService
@{
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "SEO Management";
    /*
    @inject ISEOService SEO
    <title>@SEO.Title</title>
    <meta name="description" content="@SEO.MetaDescription" />
    <meta name="keywords" content="@SEO.Keywords" />
    <meta name="robots" content="@SEO.Robots" />
    */
}
<head>
    @await Html.PartialAsync("/Pages/Shared/_SEOHead.cshtml")
</head>
<div class="container-fluid px-2 px-md-4 mt-4">
    <h2 class="mb-4 text-primary">SEO Management</h2>
    @if (Model.SEOs != null && Model.SEOs.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Page Name</th>
                        <th>Title</th>
                        <th>Meta Description</th>
                        <th>Keywords</th>
                        <th>Robots</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var seo in Model.SEOs)
                    {
                        <tr>
                            <td class="text-break">@seo.PageName</td>
                            <td class="text-break">@seo.Title</td>
                            <td class="text-break small">@seo.MetaDescription</td>
                            <td class="text-break small">@seo.Keywords</td>
                            <td>@seo.Robots</td>
                            <td>
                                <a href="/Admin/EditSEO?id=@seo.Id" class="btn btn-sm btn-primary">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            No SEO records found.
        </div>
    }
</div>
@section Scripts {
    <script>
        // Optional: Add mobile table scroll hint or other admin JS
    </script>
}
