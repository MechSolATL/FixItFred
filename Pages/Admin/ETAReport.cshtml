@model Pages.Admin.ETAReportModel
@using Services.Dispatch
@inject Services.Dispatch.NotificationDispatchEngine DispatchEngine
@{
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "ETA Accuracy Report";
    var etaHistory = Model.ETAHistory;
}
<head>
    @await Html.PartialAsync("/Pages/Shared/_SEOHead.cshtml")
</head>
<div class="container-fluid px-2 px-md-4 mt-4">
    <h2 class="mb-4 text-primary">ETA Accuracy Report</h2>
    <partial name="_ValidationSummary" />
    @if (TempData["SystemMessages"] != null)
    {
        ViewData["AlertType"] = "info";
        ViewData["AlertMessage"] = TempData["SystemMessages"];
        <partial name="_Alert" />
    }
    @if (etaHistory != null && etaHistory.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Technician</th>
                        <th>Service Request</th>
                        <th>Predicted ETA</th>
                        <th>Actual Arrival</th>
                        <th>Delta (min)</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in etaHistory)
                    {
                        <tr>
                            <td>@entry.TechnicianName</td>
                            <td>@entry.ServiceRequestId</td>
                            <td>
                                @* FixItFred: null-safe DateTime *@
                                @(entry.PredictedETA?.ToLocalTime().ToString("g") ?? "N/A")
                            </td>
                            <td>
                                @* FixItFred: null-safe DateTime *@
                                @(entry.ActualArrival?.ToLocalTime().ToString("g") ?? "N/A")
                            </td>
                            <td>
                                @* FixItFred: null-safe TimeSpan *@
                                @(entry.ActualArrival.HasValue && entry.PredictedETA.HasValue
                                    ? (entry.ActualArrival.Value - entry.PredictedETA.Value).TotalMinutes.ToString("F0") + " min"
                                    : "—")
                            </td>
                            <td>@entry.Timestamp.ToLocalTime().ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No ETA history records found.</div>
    }
</div>
@section Scripts {
    <script>
        // Optional: Add admin JS for ETA report actions
    </script>
}
