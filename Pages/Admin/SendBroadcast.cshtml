@using Models.Admin
@model Pages.Admin.SendBroadcastModel
@{
    ViewData["Title"] = "Send Broadcast Alert";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<h2 class="mb-4">Send Broadcast Alert</h2>
<partial name="_ValidationSummary" />
@if (Model.SuccessMessage != null)
{
    ViewData["AlertType"] = "success";
    ViewData["AlertMessage"] = Model.SuccessMessage;
    <partial name="_Alert" />
}
@if (Model.ErrorMessage != null)
{
    ViewData["AlertType"] = "danger";
    ViewData["AlertMessage"] = Model.ErrorMessage;
    <partial name="_Alert" />
}
<form method="post" class="mb-4">
    <div class="mb-3">
        <label asp-for="Message" class="form-label">Message</label>
        <textarea asp-for="Message" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ExpiresAt" class="form-label">Expires At (optional)</label>
        <input asp-for="ExpiresAt" type="datetime-local" class="form-control" />
        <span asp-validation-for="ExpiresAt" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger">Send Broadcast</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
