@page
@model PromptTracesModel
@{
    // Sprint 91.8 - Part 5.B
    ViewData["Title"] = "Prompt Trace Logs";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">?? OpenAI Prompt Execution Logs</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Prompt (truncated)</th>
            <th>Model</th>
            <th>Tokens</th>
            <th>Executed At</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Traces.Any())
        {
            int index = 1;
            foreach (var trace in Model.Traces)
            {
                <tr>
                    <td>@index</td>
                    <td>@(trace.Input.Length > 60 ? trace.Input.Substring(0, 60) + "…" : trace.Input)</td>
                    <td>@trace.ModelUsed</td>
                    <td>@trace.ResponseTokens</td>
                    <td>@trace.ExecutedAt.ToLocalTime()</td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr><td colspan="5" class="text-center">No prompt traces found.</td></tr>
        }
    </tbody>
</table>
