@page
@model MVP_Core.Pages.Admin.PromptTracesModel
@{
    ViewData["Title"] = "Prompt Trace Logs";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}

<h2>Prompt Execution Logs</h2>

@if (Model.Traces == null || !Model.Traces.Any())
{
    <div class="alert alert-warning">No prompt traces found.</div>
}
else
{
    <table class="table table-bordered table-hover table-sm mt-3">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Executed At</th>
                <th scope="col">Prompt (Preview)</th>
                <th scope="col">Output (Snippet)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Traces.Count; i++)
            {
                var trace = Model.Traces[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@trace.ExecutedAt.ToString("g")</td>
                    <td>@(trace.Prompt?.Length > 60 ? trace.Prompt.Substring(0, 60) + "…" : trace.Prompt)</td>
                    <td>@(trace.Output?.Length > 60 ? trace.Output.Substring(0, 60) + "…" : trace.Output)</td>
                </tr>
            }
        </tbody>
    </table>
}
