@page
@model MVP_Core.Pages.Admin.PromptTracesModel
@{
    ViewData["Title"] = "Prompt Trace Logs";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}
<!-- Sprint 90.1: Prompt Trace Log Viewer UI -->
<h2>Prompt Trace Logs</h2>
<form method="get" class="row g-2 mb-3">
    <div class="col-md-3">
        <input asp-for="UserId" class="form-control" placeholder="UserId" />
    </div>
    <div class="col-md-3">
        <input asp-for="SessionId" class="form-control" placeholder="SessionId" />
    </div>
    <div class="col-md-3">
        <input asp-for="VersionId" class="form-control" placeholder="PromptVersionId" />
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-secondary">Filter</button>
    </div>
</form>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Time</th>
            <th>User</th>
            <th>Session</th>
            <th>PromptVersion</th>
            <th>Input</th>
            <th>Output</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var trace in Model.Traces)
    {
        <tr>
            <td>@trace.CreatedAt.ToString("g")</td>
            <td>@trace.UserId</td>
            <td>@trace.SessionId</td>
            <td>@trace.PromptVersionId</td>
            <td><pre>@trace.Input</pre></td>
            <td><pre>@trace.Output</pre></td>
        </tr>
    }
    </tbody>
</table>
