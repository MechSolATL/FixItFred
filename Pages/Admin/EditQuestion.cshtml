@page
@model MVP_Core.Pages.Admin.EditQuestionModel
@{
    ViewData["Title"] = "Edit Question";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">?? Edit Question</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Question.Id" />

        <div class="mb-3">
            <label asp-for="Question.ServiceType" class="form-label">Service Type</label>
            <input asp-for="Question.ServiceType" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="Question.Text" class="form-label">Question Text</label>
            <input asp-for="Question.Text" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="Question.InputType" class="form-label">Input Type</label>
            <select asp-for="Question.InputType" class="form-select">
                <option value="text">Text</option>
                <option value="textarea">Text Area</option>
                <option value="dropdown">Dropdown</option>
                <option value="radio">Radio</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Question.ParentQuestionId" class="form-label">Parent Question (ID)</label>
            <input asp-for="Question.ParentQuestionId" class="form-control" />
            <small class="form-text text-muted">Leave blank for root question.</small>
        </div>
        <div class="mb-3">
            <label asp-for="Question.ExpectedAnswer" class="form-label">Expected Answer (for parent logic)</label>
            <input asp-for="Question.ExpectedAnswer" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Question.IsMandatory" class="form-label">Is Mandatory?</label>
            <input asp-for="Question.IsMandatory" type="checkbox" class="form-check-input ms-2" />
        </div>
        <div class="mb-3">
            <label asp-for="Question.IsPrompt" class="form-label">Is Prompt?</label>
            <input asp-for="Question.IsPrompt" type="checkbox" class="form-check-input ms-2" />
        </div>
        <div class="mb-3">
            <label asp-for="Question.PromptMessage" class="form-label">Prompt Message</label>
            <input asp-for="Question.PromptMessage" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Question.Page" class="form-label">Page/Flow</label>
            <input asp-for="Question.Page" class="form-control" />
        </div>
        <div class="mb-3">
            <a href="/Admin/ManageOptions?questionId=@Model.Question.Id" class="btn btn-outline-secondary">Manage Options</a>
        </div>
        <div class="d-flex align-items-center">
            <button type="submit" class="btn btn-success me-2">?? Save</button>
            <a href="/Admin/ManageQuestions" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
