@page "/BlazorAdmin/Dashboard"
@using MVP_Core.Data.Models
@using Microsoft.EntityFrameworkCore
@inject MVP_Core.Data.ApplicationDbContext Db
@layout BlazorAdmin.Shared._BlazorAdminLayout


<h3>Welcome to the Blazor Admin Dashboard</h3>
<p>This is where we’ll begin rendering dynamic service request data, charts, and activity logs.</p>

@if (ServiceRequests == null)
{
    <p><em>Loading service requests...</em></p>
}
else if (!ServiceRequests.Any())
{
    <p><em>No service requests found.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Service Type</th>
                <th>Status</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var req in ServiceRequests)
            {
                <tr>
                    <td>@req.Id</td>
                    <td>@req.CustomerName</td>
                    <td>@req.ServiceType</td>
                    <td>@req.Status</td>
                    <td>@req.CreatedAt.ToLocalTime().ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ServiceRequest>? ServiceRequests;

    protected override async Task OnInitializedAsync()
    {
        ServiceRequests = await Db.ServiceRequests
            .OrderByDescending(r => r.CreatedAt)
            .Take(25)
            .ToListAsync();
    }
}
