@using Microsoft.AspNetCore.Components.Routing
@namespace MVP_Core.Pages.Admin.BlazorAdmin.Shared

@inherits LayoutComponentBase

<div class="admin-layout-wrapper">
    <aside class="admin-sidebar">
        <h2>Blazor Admin</h2>
        <ul>
            <li><NavLink href="/BlazorAdmin/Dashboard" Match="NavLinkMatch.All">Dashboard</NavLink></li>
            <li><NavLink href="/BlazorAdmin/SEO">SEO Manager</NavLink></li>
            <li><NavLink href="/BlazorAdmin/Settings">Settings</NavLink></li>
        </ul>
    </aside>

    <main class="admin-main-content">
        @Body
    </main>
</div>

<style>
    .admin-layout-wrapper {
        display: flex;
        height: 100vh;
    }

    .admin-sidebar {
        width: 250px;
        background-color: #2c3e50;
        color: white;
        padding: 1rem;
        box-shadow: 2px 0 5px rgba(0,0,0,0.2);
    }

        .admin-sidebar h2 {
            margin-top: 0;
            font-size: 1.5rem;
        }

        .admin-sidebar ul {
            list-style-type: none;
            padding-left: 0;
        }

        .admin-sidebar li {
            margin-bottom: 1rem;
        }

        .admin-sidebar a {
            color: #ecf0f1;
            text-decoration: none;
        }

            .admin-sidebar a.active {
                font-weight: bold;
                border-left: 4px solid #f39c12;
                padding-left: 8px;
            }

    .admin-main-content {
        flex-grow: 1;
        padding: 2rem;
        background-color: #ecf0f1;
        overflow-y: auto;
    }
</style>
