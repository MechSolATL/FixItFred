@page "{id:int}"
@model Pages.Admin.DeleteTechnicianModel
@{
    ViewData["Title"] = "Delete Technician";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Delete Technician</h2>

@if (Model.Technician == null)
{
    <div class="alert alert-danger">Technician not found.</div>
}
else
{
    <form method="post">
        <div class="alert alert-warning">
            Are you sure you want to delete <strong>@Model.Technician.FullName</strong>?
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Admin/Technicians" class="btn btn-secondary">Cancel</a>
    </form>
}
