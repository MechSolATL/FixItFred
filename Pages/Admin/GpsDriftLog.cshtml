@page
@model Pages.Admin.GpsDriftLogModel
@{
    ViewData["Title"] = "GPS Drift Log";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<h2>GPS Route Drift Events</h2>
<form method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="number" name="TechnicianId" value="@Model.FilterTechnicianId" class="form-control" placeholder="Technician ID" />
        </div>
        <div class="col-md-3">
            <input type="date" name="FromDate" value="@(Model.FilterFromDate?.ToString("yyyy-MM-dd"))" class="form-control" placeholder="From Date" />
        </div>
        <div class="col-md-3">
            <input type="number" name="MinDistance" value="@Model.FilterMinDistance" class="form-control" placeholder="Min Drift (m)" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Technician</th>
            <th>Scheduled</th>
            <th>Actual</th>
            <th>Drift Detected At</th>
            <th>Distance (m)</th>
            <th>Route</th>
            <th>Severity</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.DriftLogs)
        {
            <tr>
                <td>@log.TechnicianId</td>
                <td>@(log.ScheduledLatitude), @(log.ScheduledLongitude)</td>
                <td>@(log.ActualLatitude), @(log.ActualLongitude)</td>
                <td>@log.DriftDetectedAt.ToString("g")</td>
                <td>@log.DistanceDriftMeters</td>
                <td>@log.RouteId</td>
                <td><span class="badge bg-warning">@log.SeverityLevel</span></td>
                <td>@log.ResolutionStatus</td>
            </tr>
        }
    </tbody>
</table>