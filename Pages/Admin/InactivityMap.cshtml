@page
@model MVP_Core.Pages.Admin.InactivityMapModel
@{
    ViewData["Title"] = "Inactivity Heatmap";
}
<h2>Inactivity Heatmap</h2>
<table class="table">
    <thead>
        <tr>
            <th>Department</th>
            <th>Open Delays</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kvp in Model.InactivityMap)
        {
            <tr>
                <td>@kvp.Key</td>
                <td>@kvp.Value</td>
            </tr>
        }
    </tbody>
</table>
