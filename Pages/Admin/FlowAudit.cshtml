@page
@model MVP_Core.Pages.Admin.FlowAuditModel
@{
    ViewData["Title"] = "Flow Audit";
}
<h2>Flow Audit & Mentorship Analytics</h2>
<form method="get" class="mb-3">
    <input type="text" name="user" placeholder="User ID" value="@Model.FilterUser" class="form-control d-inline w-auto mr-2" />
    <input type="text" name="action" placeholder="Action Type" value="@Model.FilterAction" class="form-control d-inline w-auto mr-2" />
    <input type="date" name="date" value="@(Model.FilterDate?.ToString("yyyy-MM-dd"))" class="form-control d-inline w-auto mr-2" />
    <button type="submit" class="btn btn-primary">Filter</button>
</form>
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>User</th>
            <th>Action</th>
            <th>Page</th>
            <th>Route</th>
            <th>Time</th>
            <th>Session</th>
            <th>Error?</th>
            <th>Detail</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var log in Model.Logs)
    {
        var mentor = Model.MentorCandidates.Contains(log.AdminUserId);
        <tr class="@(mentor ? "table-success" : "")">
            <td>@log.AdminUserId @(mentor ? "??" : "")</td>
            <td>@log.ActionType</td>
            <td>@log.PageName</td>
            <td>@log.Route</td>
            <td>@log.Timestamp.ToString("g")</td>
            <td>@log.SessionId</td>
            <td>@(log.IsError ? "Yes" : "No")</td>
            <td>@log.Detail</td>
        </tr>
    }
    </tbody>
</table>
<div class="mt-3">
    <b>Mentor Candidates:</b>
    @foreach (var uid in Model.MentorCandidates)
    {
        <span class="badge badge-success mr-1">@uid</span>
    }
</div>
