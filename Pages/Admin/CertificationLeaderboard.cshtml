@page
@model Pages.Admin.CertificationLeaderboardModel
@using Data.Models
@inject Services.CertificationService CertService
@inject Services.SkillsTrackerService SkillsService
@{
    ViewData["Title"] = "Certification Leaderboard";
    var leaderboard = Model.Leaderboard;
}
<h2>Certification Leaderboard</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Technician</th>
            <th>Verified Certs</th>
            <th>Expiring Soon (Completed Early)</th>
            <th>Tracks Completed</th>
            <th>Certified Tech of the Month</th>
        </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < leaderboard.Count; i++)
    {
        var entry = leaderboard[i];
        <tr>
            <td>@(i + 1)</td>
            <td>@entry.TechnicianName</td>
            <td>@entry.VerifiedCerts</td>
            <td>@entry.ExpiringSoonCompletedEarly</td>
            <td>@entry.TracksCompleted</td>
            <td>
                @if (entry.IsTechOfMonth)
                {
                    <span class="badge bg-success"><i class="fas fa-trophy"></i> Tech of the Month</span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
<script src="https://kit.fontawesome.com/7c3b9e2e2a.js" crossorigin="anonymous"></script>
