@* SmartAssign Modal for Sprint 64.0: Shows assignment scores, factors, and confidence for each technician *@
@model MVP_Core.Pages.Admin.DispatcherModel
@{
    var requestId = ViewData["SmartAssignRequestId"] as int? ?? 0;
    var scores = Model.SmartAssignmentScores.ContainsKey(requestId) ? Model.SmartAssignmentScores[requestId] : new List<MVP_Core.Services.Admin.AssignmentScoringEngine.TechnicianAssignmentScore>();
}
<div class="modal fade" id="smartAssignModal" tabindex="-1" role="dialog" aria-labelledby="smartAssignModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="smartAssignModalLabel">SmartAssign: Technician Assignment AI</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Technician</th>
                            <th>Score</th>
                            <th>Confidence</th>
                            <th>ETA</th>
                            <th>Reviews</th>
                            <th>SLA Wins</th>
                            <th>Availability</th>
                            <th>Burnout</th>
                            <th>Bonus Cooldown</th>
                            <th>Escalation Risk</th>
                            <th>Assign</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var score in scores)
                        {
                            var tech = Model.TechnicianStatuses.FirstOrDefault(t => t.TechnicianId == score.TechnicianId);
                            <tr class="@(score.IsEscalationRisk ? "table-danger" : "")">
                                <td>@tech?.Name</td>
                                <td>@score.Score.ToString("F1")</td>
                                <td>@score.Confidence.ToString("P0")</td>
                                <td>@score.Factors["ETA"]</td>
                                <td>@score.Factors["Reviews"]</td>
                                <td>@score.Factors["SLAWins"]</td>
                                <td>@(score.Factors["Availability"] == 1 ? "Yes" : "No")</td>
                                <td>@(score.Factors["Burnout"] == 1 ? "Yes" : "No")</td>
                                <td>@(score.Factors["BonusCooldown"] == 1 ? "Yes" : "No")</td>
                                <td>@(score.IsEscalationRisk ? "Yes" : "No")</td>
                                <td>
                                    <form method="post" asp-page-handler="ReassignTech">
                                        <input type="hidden" name="requestId" value="@requestId" />
                                        <input type="hidden" name="newTechnicianId" value="@score.TechnicianId" />
                                        <button type="submit" class="btn btn-success btn-sm">Assign</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
