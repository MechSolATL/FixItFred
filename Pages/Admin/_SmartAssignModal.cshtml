@* SmartAssign Modal (Legacy properties removed, aligned with DispatcherViewModel) *@
@model Models.DispatcherViewModel
@{
    var technicians = Model.Technicians;
}
<div class="modal fade" id="smartAssignModal" tabindex="-1" role="dialog" aria-labelledby="smartAssignModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" role="region" aria-label="SmartAssign Modal">
            <div class="modal-header">
                <h5 class="modal-title" id="smartAssignModalLabel">SmartAssign: Technician Assignment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" tabindex="0" style="min-height:44px;" onkeydown="if(event.key==='Escape'){document.getElementById('smartAssignModal').classList.remove('show');}">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-hover" role="table" aria-label="Technician List">
                    <thead>
                        <tr>
                            <th>Technician</th>
                            <th>Status</th>
                            <th>Assign</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tech in technicians)
                        {
                            <tr tabindex="0" aria-label="Technician @tech.FullName">
                                <td>@tech.FullName</td>
                                <td>@(tech.IsActive ? "Active" : "Inactive")</td>
                                <td>
                                    <form method="post" asp-page-handler="ReassignTech" role="form" aria-label="Assign Technician">
                                        <input type="hidden" name="newTechnicianId" value="@tech.Id" />
                                        <button type="submit" class="btn btn-success btn-sm" style="min-height:44px;" aria-label="Assign Technician">Assign</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
document.getElementById('smartAssignModal').addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        this.classList.remove('show');
    }
});
</script>
<!-- Responsive and high-contrast CSS for modal should be placed in site.css -->
