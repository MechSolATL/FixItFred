@page
@model MVP_Core.Pages.Admin.SystemDiagnosticsModel
@inject global::Services.Admin.AutoRepairEngine AutoRepairEngine
@inject global::Services.Diagnostics.RootCauseCorrelationEngine RootCauseCorrelationEngine
@inject global::Services.Admin.SmartAdminAlertsService SmartAdminAlertsService
@inject global::Services.Admin.ReplayEngineService ReplayEngineService
@{
    ViewData["Title"] = "System Diagnostics";
}
<h2>System Diagnostics</h2>
<!-- AutoRepairEngine Health Badge + Repair/Rewind Buttons -->
<div class="mb-3">
    <h4>AutoRepairEngine Health</h4>
    <span class="badge bg-secondary">@Model.HealthStatus</span>
    <form method="post">
        <button type="submit" class="btn btn-outline-success me-2" asp-page-handler="RunAutoRepair">Run Auto Repair</button>
        <button type="submit" class="btn btn-outline-warning" asp-page-handler="RewindToSnapshot">Rewind to Snapshot</button>
        <input type="number" name="SnapshotId" class="form-control d-inline-block w-auto ms-2" placeholder="Snapshot ID" />
    </form>
</div>
<!-- Recovery Scenario Table and Queue Form -->
<div class="mb-3">
    <h4>Scheduled Recovery Scenarios</h4>
    <form method="post" asp-page-handler="QueueRecovery">
        <div class="row mb-2">
            <div class="col-md-3">
                <input type="text" name="ScenarioName" class="form-control" placeholder="Scenario Name" required />
            </div>
            <div class="col-md-3">
                <input type="datetime-local" name="ScheduledForUtc" class="form-control" required />
            </div>
            <div class="col-md-3">
                <input type="text" name="SnapshotHash" class="form-control" placeholder="Snapshot Hash" required />
            </div>
            <div class="col-md-3">
                <input type="text" name="Notes" class="form-control" placeholder="Notes (optional)" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Queue Recovery Trial</button>
    </form>
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Scenario</th>
                <th>Scheduled For</th>
                <th>Executed</th>
                <th>Outcome</th>
                <th>Snapshot Hash</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var scenario in Model.ScheduledScenarios)
            {
                <tr>
                    <td>@scenario.ScenarioName</td>
                    <td>@scenario.ScheduledForUtc.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(scenario.Executed ? "Yes" : "No")</td>
                    <td>@scenario.OutcomeSummary</td>
                    <td>@scenario.SnapshotHash</td>
                    <td>@scenario.Notes</td>
                    <td>
                        @if (!scenario.Executed)
                        {
                            <form method="post" asp-page-handler="ExecuteNow" class="d-inline">
                                <input type="hidden" name="id" value="@scenario.Id" />
                                <button type="submit" class="btn btn-sm btn-warning">Run Now</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- RootCauseCorrelationEngine Summary Widget -->
<div class="mb-3">
    <h4>Root Cause Correlation Log</h4>
    <div class="alert alert-info">@Model.RootCauseSummary</div>
</div>
<!-- SmartAdminAlerts Display -->
<div class="mb-3">
    <h4>Smart Admin Alerts</h4>
    @if (Model.ActiveAlerts.Any())
    {
        <div class="alert alert-warning d-flex flex-column">
            @foreach (var alert in Model.ActiveAlerts)
            {
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2"><i class="fas fa-exclamation-triangle"></i></span>
                    <span class="me-2">[@alert.Severity] @alert.Message</span>
                    <form method="post" asp-page-handler="AcknowledgeAlert" class="d-inline">
                        <input type="hidden" name="alertId" value="@alert.Id" />
                        <input type="hidden" name="actionTaken" value="Acknowledge" />
                        <button type="submit" class="btn btn-sm btn-success me-1">Acknowledge</button>
                    </form>
                    <form method="post" asp-page-handler="AcknowledgeAlert" class="d-inline">
                        <input type="hidden" name="alertId" value="@alert.Id" />
                        <input type="hidden" name="actionTaken" value="Mute" />
                        <button type="submit" class="btn btn-sm btn-secondary">Mute</button>
                    </form>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-success">No active alerts.</div>
    }
</div>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>Module</th>
            <th>Status</th>
            <th>Summary</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.LatestLogs)
        {
            var statusClass = log.StatusLevel switch
            {
                MVP_Core.Data.Models.DiagnosticStatusLevel.OK => "table-success",
                MVP_Core.Data.Models.DiagnosticStatusLevel.Warning => "table-warning",
                MVP_Core.Data.Models.DiagnosticStatusLevel.Error => "table-danger",
                _ => ""
            };
            <tr class="@statusClass">
                <td>@log.Timestamp.ToString("g")</td>
                <td>@log.ModuleName</td>
                <td>@log.StatusLevel</td>
                <td>@log.Summary</td>
                <td>
                    <button class="btn btn-link" data-bs-toggle="modal" data-bs-target="#detailsModal@log.Id">View</button>
                    <div class="modal fade" id="detailsModal@log.Id" tabindex="-1" aria-labelledby="detailsModalLabel@log.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="detailsModalLabel@log.Id">Diagnostic Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <pre>@log.Details</pre>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Recovery AI Learning Engine Widget -->
<div class="mb-3">
    <h4>Recovery AI Learning Engine</h4>
    <form method="post" asp-page-handler="AnalyzePatterns">
        <button type="submit" class="btn btn-info mb-2">Analyze Patterns</button>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Trigger Signature</th>
                <th>Pattern Hash</th>
                <th>Outcome</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.TopRecoveryTriggers != null && Model.TopRecoveryTriggers.Any())
            {
                foreach (var trigger in Model.TopRecoveryTriggers)
                {
                    <tr>
                        <td>@trigger.TriggerSignature</td>
                        <td>@trigger.PatternHash</td>
                        <td>@trigger.Outcome</td>
                        <td>@trigger.RecordedAt.ToString("g")</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="4">No learned triggers yet.</td></tr>
            }
        </tbody>
    </table>
</div>
