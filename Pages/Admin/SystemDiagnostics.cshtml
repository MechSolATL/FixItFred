@page
@model MVP_Core.Pages.Admin.SystemDiagnosticsModel
@inject global::Services.Admin.AutoRepairEngine AutoRepairEngine
@inject global::Services.Diagnostics.RootCauseCorrelationEngine RootCauseCorrelationEngine
@inject global::Services.Admin.SmartAdminAlertsService SmartAdminAlertsService
@{
    ViewData["Title"] = "System Diagnostics";
    var healthStatus = "";
    var rootCauseSummary = "";
    var alerts = new List<string>();
    try { healthStatus = AutoRepairEngine.DetectCorruptionAsync().GetAwaiter().GetResult()?.ToString() ?? "Unknown"; } catch { healthStatus = "Error loading health status."; }
    try { rootCauseSummary = RootCauseCorrelationEngine.CorrelateRootCausesAsync().GetAwaiter().GetResult()?.ToString() ?? "No summary"; } catch { rootCauseSummary = "Error loading root cause summary."; }
    try { alerts = SmartAdminAlertsService.TriggerAlertsAsync().GetAwaiter().GetResult() as List<string> ?? new List<string>(); } catch { alerts = new List<string>{"Error loading alerts."}; }
}
<h2>System Diagnostics</h2>
<!-- AutoRepairEngine Health Badge + Rollback Button -->
<div class="mb-3">
    <h4>AutoRepairEngine Health</h4>
    <span class="badge bg-@(healthStatus == "Healthy" ? "success" : "danger")">@healthStatus</span>
    <form method="post">
        <button type="submit" class="btn btn-outline-danger" formaction="/Admin/RunRollback">Run Rollback</button>
    </form>
</div>
<!-- RootCauseCorrelationEngine Summary Widget -->
<div class="mb-3">
    <h4>Root Cause Correlation Log</h4>
    <div class="alert alert-info">@rootCauseSummary</div>
</div>
<!-- SmartAdminAlerts Display -->
<div class="mb-3">
    <h4>Smart Admin Alerts</h4>
    <div class="alert alert-warning d-flex align-items-center">
        <span class="me-2"><i class="fas fa-exclamation-triangle"></i></span>
        <span>@string.Join(", ", alerts)</span>
    </div>
</div>
<table class="table mt-3">
    <thead>
        <tr>
            <th>Timestamp</th>
            <th>Module</th>
            <th>Status</th>
            <th>Summary</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.LatestLogs)
        {
            var statusClass = log.StatusLevel switch
            {
                MVP_Core.Data.Models.DiagnosticStatusLevel.OK => "table-success",
                MVP_Core.Data.Models.DiagnosticStatusLevel.Warning => "table-warning",
                MVP_Core.Data.Models.DiagnosticStatusLevel.Error => "table-danger",
                _ => ""
            };
            <tr class="@statusClass">
                <td>@log.Timestamp.ToString("g")</td>
                <td>@log.ModuleName</td>
                <td>@log.StatusLevel</td>
                <td>@log.Summary</td>
                <td>
                    <button class="btn btn-link" data-bs-toggle="modal" data-bs-target="#detailsModal@log.Id">View</button>
                    <div class="modal fade" id="detailsModal@log.Id" tabindex="-1" aria-labelledby="detailsModalLabel@log.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="detailsModalLabel@log.Id">Diagnostic Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <pre>@log.Details</pre>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
