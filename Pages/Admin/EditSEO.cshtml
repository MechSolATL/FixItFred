@page
@model MVP_Core.Pages.Admin.EditSEOModel

@{
    ViewData["Title"] = "Edit SEO";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">🛠️ Edit SEO Entry</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <form method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="SEO.Id" />

        <div class="form-group mb-3">
            <label asp-for="SEO.PageName" class="form-label">Page Name</label>
            <input asp-for="SEO.PageName" class="form-control" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="SEO.Title" class="form-label">Title</label>
            <input asp-for="SEO.Title" class="form-control" />
            <span asp-validation-for="SEO.Title" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="SEO.MetaDescription" class="form-label">Meta Description</label>
            <textarea asp-for="SEO.MetaDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="SEO.MetaDescription" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="SEO.Keywords" class="form-label">Keywords</label>
            <textarea asp-for="SEO.Keywords" class="form-control" rows="2"></textarea>
            <span asp-validation-for="SEO.Keywords" class="text-danger small"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="SEO.RobotsMeta" class="form-label">Robots Meta</label>
            <input asp-for="SEO.RobotsMeta" class="form-control" />
            <span asp-validation-for="SEO.RobotsMeta" class="text-danger small"></span>
        </div>

        <div class="d-flex align-items-center">
            <button type="submit" class="btn btn-success me-2">
                💾 Save Changes
            </button>
            <a asp-page="/Admin/ManageSEO" class="btn btn-secondary">
                ↩️ Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
