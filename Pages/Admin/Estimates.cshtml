@* Sprint 54.1: Admin view for signed/unsigned estimates, resend, override, download with signature *@
@* [FixItFredComment:Sprint1005 - UI responsiveness corrected] Enhanced mobile responsiveness for admin table *@
@page
@model Pages.Admin.EstimatesModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    var estimates = Model.Estimates ?? new List<Data.Models.BillingInvoiceRecord>();
}
<div class="container-fluid">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start mb-3">
        <h2 class="mb-2 mb-md-0">Estimates</h2>
        <!-- [FixItFredComment:Sprint1005 - UI responsiveness corrected] Added responsive filter controls -->
        <div class="d-flex flex-column flex-sm-row gap-2">
            <button class="btn btn-outline-primary btn-sm" onclick="toggleMobileView()">
                <i class="bi bi-phone d-sm-none"></i>
                <span class="d-none d-sm-inline">Mobile View</span>
            </button>
        </div>
    </div>
    
    <!-- [FixItFredComment:Sprint1005 - UI responsiveness corrected] Responsive table with mobile cards fallback -->
    <div class="table-responsive d-none d-lg-block">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr><th>Date</th><th>Customer</th><th>Status</th><th>Signature</th><th>Decision</th><th>Actions</th></tr>
            </thead>
            <tbody>
    @foreach (var est in estimates)
    {
        <tr>
            <td>@est.InvoiceDate.ToShortDateString()</td>
            <td>@est.CustomerName</td>
            <td>@(est.IsAcknowledged ? "Acknowledged" : "Unsigned")</td>
            <td>
                @if (!string.IsNullOrEmpty(est.CustomerSignaturePath)) {
                    <img src="@est.CustomerSignaturePath" alt="Signature" style="max-width:120px;" />
                } else {
                    <span class="badge bg-secondary">No signature</span>
                }
            </td>
            <td>
                @if (est.WasAccepted) {
                    <span class="badge bg-success">Accepted</span>
                } else {
                    <span class="badge bg-danger">Rejected/Unsigned</span>
                }
            </td>
            <td>
                <a href="/api/estimate/pdf/@est.Id" class="btn btn-sm btn-primary" target="_blank">Download PDF</a>
                <button class="btn btn-sm btn-warning" onclick="resendEstimate('@est.Id')">Re-send Link</button>
                <button class="btn btn-sm btn-danger" onclick="overrideEstimate('@est.Id')">Override</button>
            </td>
        </tr>
    }
    </tbody>
</table>
<script>
function resendEstimate(id) {
    alert('Estimate link re-sent to customer.');
}
function overrideEstimate(id) {
    alert('Admin override triggered.');
}
</script>
