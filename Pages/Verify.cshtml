@page
@model Pages.VerifyModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Email Verification | Service-Atlanta";
}

<div class="verification-card mx-auto my-5 p-4 shadow rounded bg-white" style="max-width: 420px;">
    <h2 class="mb-3 text-center">Email Verification</h2>

    @if (!string.IsNullOrWhiteSpace(Model.Message))
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") text-center" role="alert">
            @Model.Message
        </div>

        @if (Model.IsSuccess && Model.VerifiedRequest != null)
        {
            <div class="mt-4 text-center">
                <div class="mb-2">
                    <span class="fw-bold">?? @Model.VerifiedRequest.CustomerName</span><br />
                    <span class="text-muted small">@Model.VerifiedRequest.Email</span>
                </div>
                <div class="mb-2">
                    <span class="fw-bold">?? Service:</span> @Model.VerifiedRequest.ServiceType
                </div>
                <div class="mb-3">
                    <span class="fw-bold">?? Your Answers:</span>
                    <ul class="list-group list-group-flush mt-2">
                        @foreach (var ans in Model.FirstAnswers)
                        {
                            <li class="list-group-item px-0 py-1">@ans</li>
                        }
                    </ul>
                </div>
                <a href="/" class="btn btn-primary w-100">Return Home</a>
            </div>
        }
        else if (Model.IsSuccess)
        {
            <div class="mt-3 text-center">
                <a href="/" class="btn btn-primary">Return Home</a>
            </div>
        }
        else
        {
            <div class="mt-3 text-center">
                <form method="post">
                    <input type="hidden" asp-for="Input.Email" />
                    <div class="h-captcha" data-sitekey="111aae8c-e434-4ac6-ad28-1e580f5c728a"></div>
                    <input type="hidden" id="h-captcha-token" name="HCaptchaToken" />
                    <button type="submit" class="btn btn-warning w-100">Retry Verification</button>
                </form>
                <form method="post" asp-page-handler="Resend">
                    <input type="hidden" asp-for="Input.Email" />
                    <div class="h-captcha" data-sitekey="111aae8c-e434-4ac6-ad28-1e580f5c728a"></div>
                    <input type="hidden" id="h-captcha-token-resend" name="HCaptchaToken" />
                    <button type="submit" class="btn btn-link mt-2 w-100" @(Model.ResendCooldown || Model.ResendCount >= 3 ? "disabled" : null)>Didn’t get the code? Resend</button>
                </form>
                @if (Model.ResendCooldown)
                {
                    <div class="text-muted small mt-1">Please wait before requesting another code.</div>
                }
                else if (Model.ResendCount >= 3)
                {
                    <div class="text-danger small mt-1">You have reached the maximum number of resend attempts.</div>
                }
            </div>
        }
    }
    else
    {
        <form method="post" class="mt-3">
            <div class="form-group mb-3">
                <label for="email">Email Address</label>
                <input asp-for="Input.Email" class="form-control" placeholder="you@example.com" required />
            </div>
            <div class="form-group mb-3">
                <label for="code">Verification Code</label>
                <input asp-for="Input.Code" class="form-control" placeholder="123456" required />
            </div>
            <div class="h-captcha" data-sitekey="111aae8c-e434-4ac6-ad28-1e580f5c728a"></div>
            <input type="hidden" id="h-captcha-token" name="HCaptchaToken" />
            <button type="submit" class="btn btn-success w-100">Verify</button>
        </form>
        <form method="post" asp-page-handler="Resend">
            <input type="hidden" asp-for="Input.Email" />
            <div class="h-captcha" data-sitekey="111aae8c-e434-4ac6-ad28-1e580f5c728a"></div>
            <input type="hidden" id="h-captcha-token-resend" name="HCaptchaToken" />
            <button type="submit" class="btn btn-link mt-2 w-100" @(Model.ResendCooldown || Model.ResendCount >= 3 ? "disabled" : null)>Didn’t get the code? Resend</button>
        </form>
        @if (Model.ResendCooldown)
        {
            <div class="text-muted small mt-1">Please wait before requesting another code.</div>
        }
        else if (Model.ResendCount >= 3)
        {
            <div class="text-danger small mt-1">You have reached the maximum number of resend attempts.</div>
        }
    }
</div>

@section Scripts {
    <script src="https://hcaptcha.com/1/api.js" async defer></script>
}
