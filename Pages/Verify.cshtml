@page
@model MVP_Core.Pages.VerifyModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Email Verification | Service-Atlanta";
}

<h2 class="mt-4">Email Verification</h2>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")" role="alert">
        @Model.Message
    </div>

    @if (Model.IsSuccess)
    {
        <div class="mt-3">
            <a href="/" class="btn btn-primary">Return Home</a>
        </div>
    }
}
else
{
    <form method="post" class="mt-3">
        <div class="form-group">
            <label for="email">Email Address</label>
            <input asp-for="Input.Email" class="form-control" placeholder="you@example.com" required />
        </div>
        <div class="form-group mt-2">
            <label for="code">Verification Code</label>
            <input asp-for="Input.Code" class="form-control" placeholder="123456" required />
        </div>
        <button type="submit" class="btn btn-success mt-3">Verify</button>
    </form>
}
